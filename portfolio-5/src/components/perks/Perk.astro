---
type Props = {
  number: string;
  title: string;
  description: string;
};
const { number, title, description } = Astro.props;
---

<div class="flex gap-8 border-b-2 border-neutral-400 pb-4">
  <div class="text-6xl md:text-7xl lora">{number}</div>
  <div class="flex flex-col gap-2">
    <div class="md:text-5xl text-4xl lora">{title}</div>
    <div class="md:text-xl">{description}</div>
  </div>
</div>
