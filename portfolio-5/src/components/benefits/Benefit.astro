---
type Props = {
  title: string;
  description: string;
};
const { title, description } = Astro.props;
---

<div
  class="shrink-0 flex flex-col w-[80%] border border-neutral-600 rounded-xl p-4 snap-center"
>
  <slot />
  <div class="mt-4">{title}</div>
  <div class="text-neutral-400">
    {description}
  </div>
</div>
