---
import AdvancedImage from '../../../../lib/components/image/AdvancedImage.astro'

type Props = {
    title: string,
    description: string,
    src: string,
    alt: string
}
const { title, description, src, alt } = Astro.props
---
<div>
    <div class="w-full aspect-[5/2.5] bg-gray-100 relative">
        <AdvancedImage 
            src={src}
            alt={alt}
            class='absolute inset-0 w-full h-full object-cover'
        />
    </div>
    <div class="font-bold text-2xl mt-2 font-serif flex justify-between mr-2">
        {title}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>          
    </div>
    <div class="text-gray-600 text-sm font-futura">{description}</div>
</div>