            <div class="bg-gray-200 flex-1 relative">
                <AdvancedImage 
                    class="absolute inset-0 w-full h-full object-cover"
                    src={testimonialImages[0]}
                    alt=""
                />
            </div>
            <div class="flex-1 flex flex-col">
                <div class="text-gray-400 font-medium font-futura">
                    Jan 26 2023
                </div>
                <div class="font-bold font-serif text-lg">
                    Living room ideas
                </div>
