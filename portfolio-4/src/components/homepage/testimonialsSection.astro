---
import AdvancedImage from "../../../lib/components/image/AdvancedImage.astro";
const testimonialImages = await Astro.glob("../../assets/images/testimonials/*").then(files => {
  return files.map(file => file.default);
});
---

<section class="px-4 pt-6 bg-black text-white">
    <div class="font-serif text-5xl pb-2">Testimonials</div>
    <div class="flex flex-col gap-4">
