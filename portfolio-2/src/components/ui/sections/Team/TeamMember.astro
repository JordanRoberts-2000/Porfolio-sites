---
import Button from "../../../Button.astro";

const { src } = Astro.props;
---

<div class="w-[85%] flex-shrink-0 snap-center flex flex-col gap-2">
    <div class="w-full aspect-[3/4] relative">
        <img src={src} alt="" class="absolute object-cover h-full w-full" />
        <div class="absolute bottom-2 left-2">
            <h3 class="text-2xl font-bold text-white">Olivia ryhe</h3>
            <h4 class="text-xl text-purple-300 font-medium">Stylist</h4>
        </div>
    </div>
    <p class="text-lg text-gray-700 font-medium">
        "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Odit debitis
        a reiciendis."
    </p>
    <Button class={"w-fit bg-transparent border-2 border-black rounded-lg text-black"}>
        See availability
    </Button>
</div>
