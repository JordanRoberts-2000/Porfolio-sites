---
const pathname = new URL(Astro.request.url).pathname;
type Props = {
  to?: string;
};
const { to = "" } = Astro.props;
---

<li>
  <a
    href={to}
    class={`${pathname === to ? "bg-lime-200" : "bg-neutral-100"} px-3 hover:bg-lime-200 py-1.5 rounded-lg cursor-pointer`}
  >
    <slot />
  </a>
</li>
