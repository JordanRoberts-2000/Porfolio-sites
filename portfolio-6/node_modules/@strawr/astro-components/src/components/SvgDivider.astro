---
import { type HTMLAttributes } from "astro/types";
import { type VariantProps, cva } from "class-variance-authority";
import { twMerge } from "tailwind-merge";
type Props = HTMLAttributes<'div'> & VariantProps<typeof variants>;
const { varient, width, class: className, ...rest } = Astro.props
const variants = cva(
    [
        "absolute top-0 left-0 overflow-hidden"
    ],
    {
        variants: {
            varient: {
                primary: [
                    "",
                ],
                secondary: [],
            },
            width: {
                small: ["w-[100%]"],
                default: ["w-[150%]"],
                large: ["w-[200%]"],
            },
        },
        defaultVariants: {
            varient: "primary",
            width: "default",
        },
    },
);
---
<div class={twMerge(variants({ varient, width, className }))} {...rest}>
    <svg class="fill-white" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
